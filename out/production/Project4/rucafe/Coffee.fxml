      <Text layoutX="60.0" layoutY="234.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add-Ins:" wrappingWidth="69.0">
         <font>
            <Font size="15.0" />
         </font>
      </Text>
      <ComboBox fx:id="sizeList" layoutX="272.0" layoutY="245.0" onAction="#handleSize" prefHeight="27.0" prefWidth="127.0" />
      <TextField fx:id="quantityText" editable="false" layoutX="344.0" layoutY="294.0" prefHeight="27.0" prefWidth="56.0" />
      <Text layoutX="272.0" layoutY="234.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Size:">
         <font>
            <Font size="15.0" />
         </font>
      </Text>
      <Text layoutX="273.0" layoutY="313.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity:">
         <font>
            <Font size="15.0" />
         </font></Text>
