      <TextField editable="false" layoutX="451.0" layoutY="254.0" prefHeight="27.0" prefWidth="113.0" />
      <Text layoutX="451.0" layoutY="243.0" strokeType="OUTSIDE" strokeWidth="0.0" text="sub-total:">
         <font>
            <Font size="15.0" />
         </font>
      </Text>
      <Button layoutX="451.0" layoutY="294.0" mnemonicParsing="false" onAction="#addToOrder" prefHeight="27.0" prefWidth="113.0" text="add to order" />
